@using project.ViewModel
@model UserDetailsVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-secondary text-white text-center">
                    <h3>Edit User</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3">
                            <input asp-for="LastName" class="form-control" placeholder="LastName" />
                            <label asp-for="LastName" class="control-label"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3">
                            <input asp-for="UserName" class="form-control" placeholder="UserName" readonly />
                            <label asp-for="UserName" class="control-label"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-3 mb-5">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="@Url.Action("Details", "User", new { id = @Model.Id })" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}